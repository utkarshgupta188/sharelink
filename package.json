{
  "name": "p2p-file-sharing",
  "version": "1.0.0",
  "description": "Simple P2P file sharing application with OTP authentication",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-public",
    "start": "node dist/index.js",
    "dev": "npx ts-node src/index.ts",
    "demo": "npx ts-node src/index.ts --demo",
    "copy-public": "cp -r public dist/ || xcopy public dist\\public\\ /E /I /Y",
    "clean": "npx rimraf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "p2p",
    "file-sharing",
    "otp",
    "authentication"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
